<%= form_for @member, :member, :html => { :multipart => true }  do |f| %>
  <% if @member.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@member.errors.count, "error") %> prohibited this member from being saved:</h2>

      <ul>
      <% @member.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name, "Your names" %><br />
    <%= f.text_field :name, :required => true %>
  </div>
	<div class="field">
    <%= f.label :avatar, "Your Avatar URL" %><br />
    <%= f.url_field :avatar, :required => true %>
  </div>
	<div class="field">
    <%= f.label :location, "Location" %><br />
    <%= f.text_field :location, :required => true %>
  </div>
	<div class="field">
    <%= f.label :title, "Your Title" %><br />
    <%= f.text_field :title, :required => true %>
  </div>
  <div class="field">
    <%= f.label :company, "Name of your company" %><br />
    <%= f.text_field :company, :required => true %>
  </div>
	<div class="field">
    <%= f.label :contact, "Your contact" %> <i>Either your email.</i><br />
    <%= f.email_field :contact, :required => true %>
  </div>
	<div class="field">
    <%= f.label :website, "Your website" %><br />
    <%= f.url_field :website, :required => true %>
  </div>
	<div class="field">
    <%= f.label :description, "Description of what you do" %><br />
    <%= f.text_area :description, :required => true %>
  </div>
	<div class="field">
    <%= f.label :aboutus, "What is iLinkoln to you? Any changes you would like?" %><br />
    <%= f.text_area :aboutus, :required => true %>
  </div>
  <div class="actions">
    <%= f.submit %> <i>Everything you put here is public</i>
  </div>
<% end %>
