<h2><%= @category.name %><%= link_to "< Back to Categories", categories_path, :class => "float_rt" %></h2>
<p  class="sponsored_article"><%= @category.description %></p>
<ul>
	<% @category.posts.each do |post| %>
	<li>
		<h3><%= link_to (post.title), post %></h3>
		<p><%= kramdown truncate(post.body, :length => 500, :omission => "Read on..." ) %></p>
	</li>
	<% end %>
</ul>